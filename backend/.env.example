# Server
HOST=0.0.0.0
PORT=8000

# GCP / Vertex AI
# For local development, set up ADC: gcloud auth application-default login
# For Cloud Run, credentials are automatic via service account
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GEMINI_MODEL=gemini-1.5-flash-001
EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=256

# Qdrant Cloud
# Get these from https://cloud.qdrant.io
QDRANT_URL=https://your-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your-api-key
QDRANT_COLLECTION=weather_kb
QDRANT_TOP_K=4

# Default location (New York)
DEFAULT_LAT=40.7128
DEFAULT_LON=-74.0060
DEFAULT_CITY=New York
